<!DOCTYPE html>
<html>
<head>
  <%= yield :head %>
  <%= stylesheet_link_tag    "admins", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
  <div class="container-fluid">
  <div class="nav">
    <header class="navbar navbar-inverse navbar-fixed-top bs-docs-nav" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button class="navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-navbar-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a href="/" class="navbar-brand">Austin Tie Dye Co</a>
      </div>
          <nav class="collapse navbar-collapse bs-navbar-collapse" role="navigation">
      <ul class="nav navbar-nav">
        <li>
          <a href="/admin/dash">Admin Dashboard</a>
        </li>
         <li>
          <a href="/admins/showusers">Customer List</a>
        </li>
        <li role="presentation" class="dropdown">
          <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Blankets <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/blankets/new">New Blanket</a></li>
            <li><a href="/blankets/">See All Blankets</a></li>
          </ul>
        </li>
        <% if @level ==1 %>
        <li role="presentation" class="dropdown">
          <a href="#" role="button" class="dropdown-toggle" data-toggle="dropdown">Admins <b class="caret"></b></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/admins/new">Add an Admin</a></li>
            <li><a href="/admins/showall">See All Admins</a></li>
          </ul>
        </li>

        <%end%>
        <li>
          <a href="/logout">Log Out</a>
        </li>
      </ul>
    </nav>
    </div>
  </header>
</div>

  <div class='container-fluid'>
    <div class="row">
        <div id='left_column' class="col-md-2 col-xs-1">
        </div>
        <div id='right_column' class="col-md-6 col-xs-10">
            <% if flash[:notice] %>
                <div class="alert alert-success" role="alert">
                    <p class='notice'><%= flash[:notice] %></p>
                </div>
            <% end %>

            <% if flash[:alert] %>
                <div class="alert alert-danger" role="alert">
                    <p class='alert'><%= flash[:alert] %></p>
                </div>
            <% end %>

            <% if flash[:errors] %>
                <% flash[:errors].each do |error| %>
                    <div class="alert alert-danger" role="alert">
                     <p> <%= error %></p>
                    </div>
                <% end %>
            <% end %>

      <%= yield :body %></div>
    </div>
  </div>
</div>
</body>
</html>