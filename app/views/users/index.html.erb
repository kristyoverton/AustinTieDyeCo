<%content_for :head do %>
<title>Weird. Original. Austin.</title>
<%end%>

<%content_for :body do %>
<div class="row"><h2>Welcome, <%=@firstname%>!</h2></div>
<div class="row">
<h3>Your Blankets (click for their stories):</h3>
</div>
<div class="row">
<% @blankets.each do |blanket|%>
<div class="col-sm-2">
<a href="/user/blankets/<%=blanket[:id]%>">
	<%= image_tag blanket.img.url, size: '100x100', :class => "img-responsive" %> </a>
</div>
<%end%>
</div>
<div class="row bordered">
<h2>Register a New Blanket</h2>
<%= simple_form_for @blanket, :url =>'/blankets/add' do |f|%>
	<%= f.input :id %>
	<%= f.input :name, label: "Give it a name?" %>
	<%= f.button :submit %>
<%end%>
</div>
<%end%>